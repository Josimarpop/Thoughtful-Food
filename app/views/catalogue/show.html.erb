<div class="container marketing">
  <h1 class="todays-recommendations">Food Catalogue</h1>
  <div class="recommendation-container">

    <% @foods.each do |food| %>
      <div class="recommendation col-lg-4">
        <div class="mask">
          <%= link_to image_tag(food.photo_path), url_for({controller:'food_item', action: 'show', id:food.id}), {class: "food-thumbnail"} %>
        </div>
        <h2><%= link_to food.name, url_for({controller: 'food_item', action: 'show', id: food.id}) %></h2>
        <p><%= food.restaurant_name%></p>
        <p><%= number_to_currency food.price %></p>
        <%= link_to "Place Order", url_for({controller: 'food_item', action: 'show', id:food.id}), {class: "btn btn-default recommendations-btn"} %>
      </div>
    <% end %>
  </div>
</div>